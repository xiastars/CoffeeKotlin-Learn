<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            style="@style/common_button"
            android:background="@drawable/so_white5"
            android:text="圆角与底色"/>

        <TextView
            style="@style/common_button"
            android:background="@drawable/so_white_st_red5"
            android:text="圆角、底色与描边"/>
        <TextView
            style="@style/common_button"
            android:background="@drawable/so_white_st_red_lb5"
            android:text="圆角、底色与单边描边"/>
        <TextView
            style="@style/common_button"
            android:text="单边圆角与底色"/>

        <TextView
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/so_yellow_oval"
            android:text="圆形"/>

        <TextView
            style="@style/common_button"
            android:layout_marginTop="10dp"
            android:background="@drawable/so_gradient_redffe_blued8"
            android:text="颜色渐变"/>

        <TextView
            style="@style/common_button"
            android:background="@drawable/so_white_st_red5_dash"
            android:text="圆角、底色、描边与虚线"/>

        <TextView
            style="@style/common_button"
            android:background="@drawable/so_redd4_right"
            android:textColor="@color/white"
            android:text="两边圆角"/>
    </LinearLayout>

</ScrollView>
