<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:background="@color/white"
	android:layout_height="match_parent">


	<View
		android:id="@+id/line_bottom"
		android:layout_width="1dp"
		android:background="@color/red_fe7"
		android:layout_height="1dp" />

	<TextView
		android:id="@+id/tv_bottom"
		android:layout_below="@id/line_bottom"
		android:layout_width="wrap_content"
		android:textSize="16sp"
		android:textColor="@color/grey_22"
		android:layout_height="wrap_content" />

	<View
		android:id="@+id/line_left"
		android:layout_width="1dp"
		android:background="@color/blue_56"
		android:layout_height="1dp" />


	<TextView
		android:id="@+id/tv_left"
		android:layout_toRightOf="@id/line_left"
		android:layout_width="wrap_content"
		android:textSize="16sp"
		android:textColor="@color/grey_22"
		android:layout_height="wrap_content" />

	<View
		android:id="@+id/line_right"
		android:layout_width="1dp"
		android:background="@color/yellow_e7"
		android:layout_height="1dp" />


	<TextView
		android:id="@+id/tv_right"
		android:layout_toRightOf="@id/line_right"
		android:layout_width="wrap_content"
		android:textSize="16sp"
		android:textColor="@color/grey_22"
		android:layout_height="wrap_content" />

	<View
		android:id="@+id/line_top"
		android:layout_width="1dp"
		android:background="@color/green_4b"
		android:layout_height="1dp" />

	<TextView
		android:id="@+id/tv_top"
		android:layout_below="@id/line_top"
		android:layout_width="wrap_content"
		android:textSize="16sp"
		android:textColor="@color/grey_22"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="40dp">

	</LinearLayout>


</RelativeLayout>