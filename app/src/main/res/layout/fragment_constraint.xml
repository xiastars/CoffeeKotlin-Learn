<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<Button
		android:id="@+id/btn_first"
		android:layout_width="100dp"
		android:layout_marginLeft="10dp"
		android:layout_marginHorizontal="20dp"

		android:layout_height="40dp"
		android:background="@drawable/so_redf8_3"/>

	<Button
		android:id="@+id/btn_second"
		app:layout_constrainedHeight="true"
		android:layout_width="100dp"
		android:layout_height="40dp"
		app:layout_constraintLeft_toRightOf="@id/btn_first"
		android:background="@drawable/so_blue4_5"/>

	<Button
		android:id="@+id/btn_third"
		android:layout_width="100dp"
		android:layout_height="40dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/so_yellowff6_5"
		android:paddingHorizontal="10dp"
		app:layout_constrainedHeight="true"
		app:layout_constraintHeight_percent="10"

		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintRight_creator="@android:integer/config_longAnimTime"
		app:layout_constraintTop_toBottomOf="@id/btn_first"
		tools:layout_editor_absoluteX="182dp" />
</android.support.constraint.ConstraintLayout>