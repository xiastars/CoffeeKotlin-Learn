<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_parent"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/common_white_click"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.summer.helper.view.RoundAngleImageView
        android:id="@+id/iv_nav"
        android:layout_width="105dp"
        android:layout_height="85dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_20"
        android:background="@color/grey_e1"
        android:scaleType="centerCrop"
        app:corner_radius="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/iv_nav"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <ImageView
            android:id="@+id/iv_hot"
            android:layout_width="22.5dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginRight="2dp"
            android:layout_height="15.3dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@id/iv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="top|left"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_26"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="47dp"
            android:layout_marginTop="5dp"
            android:layout_height="15dp"
            android:layout_below="@id/tv_title"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:ellipsize="end"
            android:focusable="false"
            android:singleLine="true"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/grey_99"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_join"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:textColor="@color/grey_99"
            android:textSize="@dimen/text_24" />
    </RelativeLayout>

</LinearLayout>