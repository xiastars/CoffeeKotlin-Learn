<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="both_wrap">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">wrap_content</item>
	</style>
	  <style name="both_wrap_three">
	      <item name="android:layout_marginTop">5dp</item>
	        <item name="android:layout_marginBottom">5dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">wrap_content</item>
	</style>
	<style name="both_match">
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_width">match_parent</item>
	</style>
	<!-- 宽度向右20的线 -->
	<style name="divide_line_h" >
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	    <item name="android:layout_marginLeft">20dp</item>	   
	    <item name="android:background">#C8C8C8</item>
	</style>
	 <!-- 宽度满屏的线 -->
		<style name="divide_line_f" >
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item> 
	    <item name="android:background">#C8C8C8</item>
	</style>
	<!-- 垂直的线 -->
	<style name="divide_line_v">
	    <item name="android:layout_width">1dp</item>
	    <item name="android:layout_height">match_parent</item> 
	    <item name="android:background">#C8C8C8</item>
	</style>
	  <!-- Dialog样式 -->
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
	<style name="common_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:layout_marginTop">@dimen/size_10</item>
		<item name="android:layout_marginBottom">@dimen/size_30</item>
		<item name="android:layout_marginLeft">@dimen/size_30</item>
		<item name="android:layout_marginRight">@dimen/size_30</item>
		<item name="android:background">@drawable/so_redf8_3</item>
		<item name="android:paddingLeft">@dimen/size_15</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingRight">@dimen/size_15</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="SwipeBackLayout">
		<item name="edge_size">50dip</item>
		<item name="shadow_left">@mipmap/shadow_left</item>
		<item name="shadow_right">@mipmap/shadow_right</item>
		<item name="shadow_bottom">@mipmap/shadow_bottom</item>
	</style>

</resources>
