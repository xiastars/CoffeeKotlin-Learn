<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nav_iv_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tab_icon_view" />

        <TextView
            android:id="@+id/nav_tv_dot"
            android:layout_width="8dp"
            android:layout_alignTop="@id/nav_iv_icon"
            android:layout_toRightOf="@id/nav_iv_icon"
            android:layout_height="8dp"
            android:layout_marginLeft="-4dp"
            android:background="@drawable/ic_red_dot"
            android:ellipsize="none"
            android:lines="1"

            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="EllipsizeMaxLines" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nav_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:textSize="11sp"
        tools:text="@string/app_name" />


</LinearLayout>