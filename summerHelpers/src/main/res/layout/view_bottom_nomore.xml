<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_nomore"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/left_line"
            style="@style/line_horizontal_f1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:layout_toLeftOf="@+id/tv_nomore"
            android:background="@color/grey_dc" />

        <TextView
            android:id="@+id/tv_nomore"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我是有底线的"
            android:textColor="@color/grey_93" />

        <View
            android:id="@+id/right_left"
            style="@style/line_horizontal_f1"
            android:layout_centerVertical="true"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_nomore"
            android:background="@color/grey_dc" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_nav"
            android:layout_width="137dp"
            android:layout_height="107dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/blank_empty_img" />

        <TextView
            android:id="@+id/tv_hint_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/tip_empty_content"
            android:textColor="@color/grey_d6"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_reload"
            android:layout_width="161dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/so_white_blue56_2"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="@color/blue_56"
            android:textSize="16sp"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>