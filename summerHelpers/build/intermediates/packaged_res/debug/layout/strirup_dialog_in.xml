<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="300dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_right"
            style="@style/grey93_14"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/cancel"
            android:textColor="@color/grey_66" />

        <TextView
            android:id="@+id/tv_top_title"
            style="@style/grey93_14"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_finish"
            style="@style/grey93_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="@string/finish"
            android:textColor="@color/grey_66" />

        <View
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            style="@style/line_horizontal" />

    </RelativeLayout>


    <com.summer.helper.view.NRecycleView
        android:id="@+id/nv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.summer.helper.view.NRecycleView>

    <TextView
        android:id="@+id/tv_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/grey_f4"
        android:gravity="center"
        android:textColor="@color/grey_66" />

</LinearLayout>